    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const botoesDeEscolha = document.querySelectorAll('button[data-target]');
            botoesDeEscolha.forEach(botao => {
                botao.addEventListener('click', () => {
                    const telaAlvoId = botao.getAttribute('data-target');
                    const telaAlvo = document.getElementById(telaAlvoId);
                    const telaAtual = document.querySelector('.tela.ativa');
                    if (telaAtual && telaAlvo) {
                        telaAtual.classList.remove('ativa');
                        telaAlvo.classList.add('ativa');
                    }
                });
            });
        });
    </script>

